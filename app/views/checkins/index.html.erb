<div class="d-none d-md-block m-5">
  <div id="map"></div>
</div>

<div class="d-md-none d-lg-none d-xl-none container d-flex h-100">
  <div class="row justify-content-center align-self-center m-0 w-100">      
    <% if flash.any? %>
      <% flash.each do |msg_type, message| %>
        <%= message %>
      <% end %>
    <% else %>
      <%= form_for @checkin, remote: true, authenticity_token: true do |f| %>
        <%= f.submit "Check-in", class: "btn btn-block btn-success btn-lg" %>
      <% end %>
    <% end %>

  </div>
</div>


